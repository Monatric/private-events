<section class="home">
  <h1>Find all fun events you can participate on, right here!</h1>

  <h2>Available events:</h2>
  <% if @events.size.zero? %>
    <p>No events found. Try again later.</p>
  <% else %>
    <% @events.each do |event| %>
      <div>
        <p>Location: <%= event.location %></p>
        <p>Date: <%= event.event_date %></p>
      </div>
    <% end %>
  <% end %>
</section>